{
  "name": "minimal-freim/task-manager",
  "description": "Simple task manager with FastRoute",
  "type": "project",
  "require": {
    "php": ">=8.1",
    "nikic/fast-route": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "require-dev": {
    "laravel/pint": "^1.25",
    "phpstan/phpstan": "^2.1",
    "phpstan/extension-installer": "^1.4"
  },
  "scripts": {
    "dev:all": [
      "phpstan analyse --memory-limit=2G",
      "pint"
    ]
  }
}
